@using Microsoft.AspNetCore.Identity
@using FirstWebApplication.Models
@using System
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    // Determine the home page based on user role
    string homeController = "Home";
    string homeAction = "Index";
    bool isAdmin = false;
    bool isPilot = false;
    bool isRegistrar = false;
    ApplicationUser? currentUser = null;
    
    // Get current controller and action
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    bool isOnHomePage = currentController.Equals("Home", StringComparison.OrdinalIgnoreCase) && currentAction.Equals("Index", StringComparison.OrdinalIgnoreCase);
    
    if (SignInManager.IsSignedIn(User))
    {
        currentUser = await UserManager.GetUserAsync(User);
        if (currentUser != null)
        {
            isAdmin = await UserManager.IsInRoleAsync(currentUser, "Admin");
            isPilot = await UserManager.IsInRoleAsync(currentUser, "Pilot");
            isRegistrar = await UserManager.IsInRoleAsync(currentUser, "Registerfører");
            
            if (isAdmin)
            {
                homeController = "Admin";
                homeAction = "Dashboard";
            }
            else if (isPilot)
            {
                homeController = "Map";
                homeAction = "Map";
            }
            else if (isRegistrar)
            {
                homeController = "Registrar";
                homeAction = "Registrar";
            }
        }
    }
}

<html lang="en">
<head>
    <link rel="icon" type="image/png" href="~/images/kartverket-logo.png" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kartverket</title>
    @await Html.PartialAsync("_Styles")
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                @if (SignInManager.IsSignedIn(User))
                {
                    @if (isAdmin)
                    {
                        <a class="navbar-brand" asp-controller="Admin" asp-action="Dashboard">Kartverket</a>
                    }
                    else if (isPilot)
                    {
                        <a class="navbar-brand" asp-controller="Map" asp-action="Map">Kartverket</a>
                    }
                    else if (isRegistrar)
                    {
                        <a class="navbar-brand" asp-controller="Registrar" asp-action="Registrar">Kartverket</a>
                    }
                    else
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Kartverket</a>
                    }
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Kartverket</a>
                }
                
                <div class="dropdown">
                    <button class="btn btn-outline-secondary position-relative hamburger-menu" type="button" id="navbarDropdown" data-bs-toggle="dropdown" aria-expanded="false" aria-label="Meny">
                        <span class="hamburger-icon">
                            <span></span>
                            <span></span>
                            <span></span>
                        </span>
                        @if (isPilot)
                        {
                            <span id="notification-badge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary" style="display: none;">
                                <span id="notification-count">0</span>
                                <span class="visually-hidden">nye varslinger</span>
                            </span>
                        }
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        @if (!SignInManager.IsSignedIn(User))
                        {
                            @* Frontpage menu - only when not logged in *@
                            <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="OmOss">Om oss</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Log inn</a></li>
                        }
                        else
                        {
                            @* Role-based menus when logged in *@
                            @if (isAdmin)
                            {
                                @* Admin menu - only show when in Admin views *@
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="ManageUsers">Brukerhåndtering</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Reports">Rapporter</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="ArchivedReports">Arkiverte rapporter</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logg ut</a></li>
                            }
                            else if (isPilot)
                            {
                                @* Pilot menu - only show when in Pilot views *@
                                <li><a class="dropdown-item" asp-controller="Map" asp-action="Map">Kart</a></li>
                                <li><a class="dropdown-item" asp-controller="Pilot" asp-action="Index">Mine rapporter</a></li>
                                <li><a class="dropdown-item" id="varsling-menu-item" asp-controller="Varsling" asp-action="Index">Varsling</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logg ut</a></li>
                            }
                            else if (isRegistrar)
                            {
                                @* Registerfører menu - only show when in Registerfører views *@
                                <li><a class="dropdown-item" asp-area="" asp-controller="Registrar" asp-action="Registrar">Rapporter</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Registrar" asp-action="ArchivedReports">Arkiverte rapporter</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logg ut</a></li>
                            }
                        }    
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Kartverket - <a asp-area="" asp-controller="Home" asp-action="Privacy">Personvern</a>
        </div>
    </footer>

    @await Html.PartialAsync("_Scripts")  <!-- Include JS -->
    @RenderSection("Scripts", required: false)  <!-- Optional page-specific scripts -->
    
    @if (SignInManager.IsSignedIn(User) && isPilot)
    {
        <script>
            // Hent notification count når siden lastes
            document.addEventListener('DOMContentLoaded', function() {
                loadNotificationCount();
                
                // Oppdater hvert 30. sekund
                setInterval(loadNotificationCount, 30000);
            });

            function loadNotificationCount() {
                fetch('/Varsling/GetNotificationCount')
                    .then(response => response.json())
                    .then(data => {
                        const badge = document.getElementById('notification-badge');
                        const countElement = document.getElementById('notification-count');
                        const varslingMenuItem = document.getElementById('varsling-menu-item');
                        
                        if (data.count > 0) {
                            // Vis badge med antall
                            if (badge) {
                                badge.style.display = 'inline-block';
                                if (countElement) {
                                    countElement.textContent = data.count;
                                }
                            }
                            
                            // Legg til blå outline på Varsling menypunkt (uten bakgrunnsfarge)
                            if (varslingMenuItem) {
                                varslingMenuItem.classList.add('border', 'border-primary', 'border-2', 'rounded', 'px-2', 'py-1');
                            }
                        } else {
                            // Skjul badge
                            if (badge) {
                                badge.style.display = 'none';
                            }
                            
                            // Fjern outline fra Varsling menypunkt
                            if (varslingMenuItem) {
                                varslingMenuItem.classList.remove('border', 'border-primary', 'border-2', 'rounded', 'px-2', 'py-1');
                                varslingMenuItem.style.backgroundColor = '';
                            }
                        }
                    })
                    .catch(error => {
                        console.error('Error loading notification count:', error);
                    });
            }
        </script>
    }
</body>
</html>
