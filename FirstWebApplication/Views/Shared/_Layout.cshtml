@using Microsoft.AspNetCore.Identity
@using FirstWebApplication.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    // Determine the home page based on user role
    string homeController = "Home";
    string homeAction = "Index";
    bool isAdmin = false;
    bool isPilot = false;
    bool isRegistrar = false;
    ApplicationUser? currentUser = null;
    
    if (SignInManager.IsSignedIn(User))
    {
        currentUser = await UserManager.GetUserAsync(User);
        if (currentUser != null)
        {
            isAdmin = await UserManager.IsInRoleAsync(currentUser, "Admin");
            isPilot = await UserManager.IsInRoleAsync(currentUser, "Pilot");
            isRegistrar = await UserManager.IsInRoleAsync(currentUser, "Registerfører");
            
            if (isAdmin)
            {
                homeController = "Admin";
                homeAction = "Dashboard";
            }
            else if (isPilot)
            {
                homeController = "Map";
                homeAction = "Map";
            }
            else if (isRegistrar)
            {
                homeController = "Registrar";
                homeAction = "Registrar";
            }
        }
    }
}

<html lang="en">
<head>
    <link rel="icon" type="image/png" href="~/images/kartverket-logo.png" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kartverket</title>
    @await Html.PartialAsync("_Styles")  
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Kartverket</a>
                
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="navbarDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Meny
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li><a class="dropdown-item" asp-area="" asp-controller="Map" asp-action="Map">Map</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Registrar" asp-action="Registrar">Registerfører</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Advice" asp-action="FeedbackForm">Feedback</a></li>
                            <li><hr class="dropdown-divider"></li>
                            @if (isAdmin)
                            {
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">Admin</a></li>
                            }
                            else if (isPilot)
                            {
                                <li><h6 class="dropdown-header">Pilot</h6></li>
                                <li><a class="dropdown-item" asp-controller="Map" asp-action="Map">Kart</a></li>
                                <li><a class="dropdown-item" asp-controller="Pilot" asp-action="Index">Mine rapporter</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logg ut</a></li>
                            }
                            else if (isRegistrar)
                            {
                                <li><a class="dropdown-item" asp-area="" asp-controller="Registrar" asp-action="Registrar">Rapporter</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logg ut</a></li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Kartverket - <a asp-area="" asp-controller="Home" asp-action="Privacy">Personvern</a>
        </div>
    </footer>

    @await Html.PartialAsync("_Scripts")  <!-- Include JS -->
    @RenderSection("Scripts", required: false)  <!-- Optional page-specific scripts -->
</body>
</html>
