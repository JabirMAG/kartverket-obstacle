@model string

@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nasjonalt register over luftfartshindre</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Index.css">
</head>
<body style="margin: 0; padding: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
    <div class="main-content">
        <div class="content-section">
            <h2 class="greeting-heading">@ViewBag.Greeting</h2>
            <h1>Nasjonalt register over luftfartshindre</h1>
            
            <p>
                Nasjonalt register over luftfartshindre (NRL) er et digitalt register over menneskeskapte objekter
                som anses å utgjøre en risiko for luftfarten, spesielt ved lavtflyging. Registeret forvaltes av
                Kartverket og er hjemlet i luftfartshinderforskriften som forvaltes av Luftfartstilsynet. Forskriften
                pålegger den som eier et luftfartshinder å rapportere til NRL.
            </p>
            <p>
                <a href="#" class="read-more-link">Les mer om Nasjonalt register over luftfartshindre</a>
            </p>
        </div>
        <div class="login-and-register-section" style="flex: 0 1 320px; min-width: 280px; display: flex; flex-direction: column; align-items: stretch; gap: 1rem;">
            <a class="login-button" asp-area="" asp-controller="Account" asp-action="Login" style="background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%) !important; color: white !important; padding: 16px 32px !important; text-decoration: none !important; border-radius: 8px !important; font-weight: 600 !important; font-size: 1.0625rem !important; display: inline-flex !important; align-items: center !important; justify-content: center !important; width: 100% !important; min-width: 240px !important; box-shadow: 0 4px 12px rgba(25, 118, 210, 0.25) !important; border: none !important; cursor: pointer !important; transition: all 0.3s ease !important;">Logg inn →</a>
            <a class="register-button" asp-area="" asp-controller="Account" asp-action="Register" style="background: linear-gradient(135deg, #43a047 0%, #388e3c 100%) !important; color: white !important; padding: 16px 32px !important; text-decoration: none !important; border-radius: 8px !important; font-weight: 600 !important; font-size: 1.0625rem !important; display: inline-flex !important; align-items: center !important; justify-content: center !important; width: 100% !important; min-width: 240px !important; box-shadow: 0 4px 12px rgba(67, 160, 71, 0.25) !important; border: none !important; cursor: pointer !important; transition: all 0.3s ease !important;">Registrer deg →</a>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer-background">
        <div class="footer-container">
            <!-- Kartverket Logo -->
            <div class="footer-logo-title">
                <img class="footer-logo" src="/images/kartverket-logo.png" alt="Kartverket-logo" />
                Kartverket
            </div>

            <h2 class="footer-title">Kontaktinformasjon eller andre henvendelser</h2>

            <!-- Three column layout -->
            <div class="footer-grid">
                <div>
                    <h3 class="footer-contact-title">Kontakt oss</h3>
                    <p class="footer-contact-phone-nr">Telefon: 
                        <a href="tel:32118000" class="footer-contact-phone-nr-line">32 11 80 00</a></p>
                    <p>E-post: <a href="mailto:nrl@kartverket.no" class="footer-contact-email">nrl@kartverket.no</a></p>
                </div>

                <div>
                    <h3 class="footer-adress-title">Postadresse</h3>
                    <p class="footer-adress">Kartverket</p>
                    <p class="footer-adress">Nasjonalt register over luftfartshindre</p>
                    <p class="footer-adress">Postboks 600 sentrum</p>
                    <p>3507 Hønefoss</p>
                </div>
                
                
                <div>
                    <h3 class="footer-help-title">Hjelp</h3>
                    <p><a href="#" class="footer-help">Personvern</a></p>
                    <p><a href="#" class="footer-help">Tilgjengelighetserklæring</a></p>
                    <p><a href="#" class="footer-help">Mer informasjon om NRL</a></p>
                    <p class="footer-version">Versjon 1.2.41.</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>