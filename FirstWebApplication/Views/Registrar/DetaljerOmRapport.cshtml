@model FirstWebApplication.Models.ObstacleData
@using System.Text.Json
@using System.Linq

@{
    ViewData["Title"] = Model?.ObstacleName ?? "Detaljer om rapport";
    var obstacle = ViewBag.Obstacle as FirstWebApplication.Models.ObstacleData;
    var rapports = ViewBag.Rapports as List<FirstWebApplication.Models.RapportData>;
    var statusText = obstacle?.ObstacleStatus switch
    {
        1 => "Under behandling",
        2 => "Godkjent",
        3 => "Avslått",
        _ => "Ukjent"
    };
}

<h1 class="display-6">@(obstacle?.ObstacleName ?? "N/A")</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="mt-3">
    <a class="btn btn-secondary" asp-controller="Registrar" asp-action="Registrar">← Tilbake til rapporter</a>
</div>

@if (obstacle == null)
{
    <div class="alert alert-danger mt-3">
        <p>Fant ikke hindring.</p>
    </div>
}
else
{
    <div class="row mt-4">
        <!-- Overview Section -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Oversikt over hindring</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Navn:</dt>
                        <dd class="col-sm-8">@obstacle.ObstacleName</dd>

                        <dt class="col-sm-4">Registrert av:</dt>
                        <dd class="col-sm-8">@(obstacle.OwnerUser?.UserName ?? obstacle.OwnerUser?.Email ?? "Ukjent bruker")</dd>

                        <dt class="col-sm-4">Høyde:</dt>
                        <dd class="col-sm-8">@obstacle.ObstacleHeight m</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <form asp-controller="Registrar" asp-action="UpdateObstacleStatus" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="obstacleId" value="@obstacle.ObstacleId" />
                                <input type="hidden" name="returnUrl" value="DetaljerOmRapport" />
                                <select name="status" onchange="this.form.submit()" class="form-select form-select-sm d-inline-block" style="width: auto;">
                                    <option value="1" selected="@(obstacle.ObstacleStatus == 1)">Under behandling</option>
                                    <option value="2" selected="@(obstacle.ObstacleStatus == 2)">Godkjent</option>
                                    <option value="3" selected="@(obstacle.ObstacleStatus == 3)">Avslått</option>
                                </select>
                            </form>
                        </dd>

                        <dt class="col-sm-4">Beskrivelse:</dt>
                        <dd class="col-sm-8">@obstacle.ObstacleDescription</dd>
                    </dl>
                </div>
            </div>

            <!-- Kommentar Section -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">Kommentarer</h5>
                </div>
                <div class="card-body">
                    @{
                        // Filtrer ut automatisk genererte kommentarer (de som starter med "Hindring 'X' ble sendt inn")
                        var adminComments = rapports?.Where(r => !(r.RapportComment.StartsWith("Hindring '") && r.RapportComment.Contains(" ble sendt inn. Høyde:"))).ToList();
                    }
                    @if (adminComments != null && adminComments.Any())
                    {
                        <div class="mb-3">
                            <h6 class="mb-2">Eksisterende kommentarer:</h6>
                            <ul class="list-unstyled">
                                @foreach (var rapport in adminComments.OrderByDescending(r => r.RapportID))
                                {
                                    <li class="mb-2">
                                        <div class="border rounded p-2 bg-light">
                                            <small class="text-muted">Kommentar #@rapport.RapportID</small>
                                            <p class="mb-0 mt-1">@rapport.RapportComment</p>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <p class="text-muted">Ingen kommentarer ennå.</p>
                        </div>
                    }

                    <form asp-controller="Registrar" asp-action="AddComment" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="obstacleId" value="@obstacle.ObstacleId" />
                        <div class="mb-3">
                            <label for="comment" class="form-label">Legg til kommentar:</label>
                            <textarea id="comment" name="comment" class="form-control" rows="3" placeholder="For eksempel: Be brukeren om mer informasjon om hindringen..." required></textarea>
                            <small class="form-text text-muted">Du kan be brukeren om mer informasjon eller legge til notater om hindringen.</small>
                        </div>
                        <button type="submit" class="btn btn-primary">Legg til kommentar</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Map Section -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Kart</h5>
                </div>
                <div class="card-body p-0">
                    <div id="detail-map" style="height: 400px; width: 100%;"></div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin="" />

    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            @if (obstacle != null && !string.IsNullOrEmpty(obstacle.GeometryGeoJson))
            {
                    <text>
                    var geometryGeoJson = @Html.Raw(obstacle.GeometryGeoJson);

                    try {
                        var geojson = typeof geometryGeoJson === 'string' ? JSON.parse(geometryGeoJson) : geometryGeoJson;

                        // Initialize map
                        var map = L.map('detail-map');

                        // Add OSM tile layer
                        L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                        }).addTo(map);

                        // Add GeoJSON layer
                        var geojsonLayer = L.geoJSON(geojson, {
                            pointToLayer: function (feature, latlng) {
                                return L.marker(latlng);
                            },
                            style: function (feature) {
                                return {
                                    color: '#3388ff',
                                    weight: 3,
                                    opacity: 0.8
                                };
                            }
                        }).addTo(map);

                        // Fit map bounds to the GeoJSON
                        if (geojsonLayer.getBounds && geojsonLayer.getBounds().isValid()) {
                            map.fitBounds(geojsonLayer.getBounds().pad(0.1));
                        } else {
                            // Fallback: center on Norway if bounds are invalid
                            map.setView([59.9139, 10.7522], 7);
                        }
                    } catch (err) {
                        console.error("Error rendering map:", err);
                        // Initialize map with default view if GeoJSON is invalid
                        var map = L.map('detail-map').setView([59.9139, 10.7522], 7);
                        L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                        }).addTo(map);
                    }
                    </text>
            }
            else
            {
                    <text>
                    // Initialize map with default view if no geometry
                    var map = L.map('detail-map').setView([59.9139, 10.7522], 7);
                    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                    }).addTo(map);
                    </text>
            }
        });
    </script>
}