@model FirstWebApplication.Models.ViewModel.RegistrarViewModel

@{
    ViewData["Title"] = "Obstacle Register";
}

<div class="max-w-7xl mx-auto px-6 py-8">
    <header class="mb-6">
        <h1 class="text-3xl font-semibold text-slate-900">Obstacle Register</h1>
        <p class="mt-2 text-sm text-slate-600">
            A list of registered obstacles. Use the status selector to update an obstacle's status; add reports below each item.
        </p>
    </header>

    <section class="bg-white shadow-sm rounded-lg overflow-hidden border border-slate-100">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-100 table-fixed w-full">
                <thead class="bg-slate-50 sticky top-0 z-10">
                    <tr>
                        <th class="px-5 py-3 text-left text-xs font-medium text-slate-600 uppercase tracking-wider">ID</th>
                        <th class="px-5 py-3 text-left text-xs font-medium text-slate-600 uppercase tracking-wider">Name</th>
                        <th class="px-5 py-3 text-left text-xs font-medium text-slate-600 uppercase tracking-wider">Height (m)</th>
                        <th class="px-5 py-3 text-left text-xs font-medium text-slate-600 uppercase tracking-wider">Description</th>
                        <th class="px-5 py-3 text-left text-xs font-medium text-slate-600 uppercase tracking-wider">Coordinates (GeoJSON)</th>
                        <th class="px-5 py-3 text-left text-xs font-medium text-slate-600 uppercase tracking-wider">Status</th>
                        <th class="px-5 py-3 text-left text-xs font-medium text-slate-600 uppercase tracking-wider">Reports</th>
                        <th class="px-5 py-3 text-left text-xs font-medium text-slate-600 uppercase tracking-wider">Detail</th>
                    </tr>
                </thead>

                <tbody class="bg-white divide-y divide-slate-100">
                    @foreach (var obstacle in Model.Obstacles)
                    {
                        var coordsId = $"RegisterCoordinates-{obstacle.ObstacleId}";
                        var displayId = $"RegisterDisplayCoordinates-{obstacle.ObstacleId}";
                        var Status = obstacle.ObstacleStatus.ToString();

                        if (Status == "1") { Status = "Pending"; }
                        else if (Status == "2") { Status = "Approved"; }
                        else if (Status == "3") { Status = "Rejected"; }

                        <tr class="hover:bg-slate-50">
                            <td class="px-5 py-4 align-top text-sm text-slate-700 w-20 truncate">@obstacle.ObstacleId</td>

                            <td class="px-5 py-4 align-top text-sm text-slate-800 max-w-xs truncate">
                                <div class="font-medium">@obstacle.ObstacleName</div>
                            </td>

                            <td class="px-5 py-4 align-top text-sm text-slate-700 w-24 truncate">@obstacle.ObstacleHeight</td>

                            <td class="px-5 py-4 align-top text-sm text-slate-700 break-words max-w-xs whitespace-normal">
                                <div class="text-sm leading-relaxed">@obstacle.ObstacleDescription</div>
                            </td>

                            <td class="px-5 py-4 align-top text-sm text-slate-700 max-w-xs">
                                <div class="sm:col-span-1">
                                    <dl>
                                        <dd id="@displayId" class="text-sm text-slate-700 break-words whitespace-normal">Loading coordinatesâ€¦</dd>
                                    </dl>
                                    <textarea id="@coordsId" hidden aria-hidden="true">@obstacle.GeometryGeoJson</textarea>
                                </div>
                            </td>

                            <td class="px-5 py-4 align-top text-sm text-slate-700 w-40">
                                <form asp-controller="Registrar" asp-action="UpdateObstacleStatus" method="post">
                                    <input type="hidden" name="obstacleId" value="@obstacle.ObstacleId" />
                                    <select name="status" onchange="this.form.submit()" class="border rounded px-2 py-1">
                                        <option value="1" selected="@(obstacle.ObstacleStatus == 1)">Pending</option>
                                        <option value="2" selected="@(obstacle.ObstacleStatus == 2)">Approved</option>
                                        <option value="3" selected="@(obstacle.ObstacleStatus == 3)">Rejected</option>
                                    </select>
                                </form>
                            </td>

                            <td class="px-5 py-4 align-top text-sm text-slate-700 max-w-xl">
                                <div class="space-y-3">
                                    <div>
                                        <div class="text-xs font-medium text-slate-500 mb-1">Existing</div>
                                        <ul class="text-sm space-y-1 max-h-40 overflow-auto">
                                            @{
                                                var reportsForThis = Model.Rapports?.Where(r => r.ObstacleId == obstacle.ObstacleId);
                                                if (reportsForThis != null && reportsForThis.Any())
                                                {
                                                    foreach (var r in reportsForThis)
                                                    {
                                                        <li class="flex items-start">
                                                            <span class="inline-flex items-center justify-center h-5 w-5 rounded-full bg-slate-100 text-slate-600 text-xs mr-2">#</span>
                                                            <div class="min-w-0">
                                                                <div class="text-sm font-medium text-slate-800 truncate">[@r.RapportID]</div>
                                                                <div class="text-sm text-slate-600 truncate">(@r.RapportComment)</div>
                                                            </div>
                                                        </li>
                                                    }
                                                }
                                                else
                                                {
                                                    <li class="text-sm text-slate-500">No reports</li>
                                                }
                                            }
                                        </ul>
                                    </div>

                                    <div>
                                        <form asp-controller="Registrar" asp-action="AddRapport" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="obstacleId" value="@obstacle.ObstacleId" />
                                            <label for="rapport-@obstacle.ObstacleId" class="sr-only">Add rapport</label>
                                            <textarea id="rapport-@obstacle.ObstacleId" name="rapportComment" class="w-full rounded-md border border-slate-100 p-2 text-sm text-slate-700" rows="2" placeholder="Add a report..."></textarea>
                                            <div class="mt-2 flex items-center justify-end">
                                                <button type="submit" class="inline-flex items-center gap-2 rounded-md bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400">
                                                    Add
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </td>

                            <!-- Detail button column -->
                            <td class="px-5 py-4 align-top text-sm text-slate-700 w-24">
                                <a asp-controller="Obstacle" asp-action="Overview" asp-route-id="@obstacle.ObstacleId"
                                   class="inline-flex items-center gap-1 rounded bg-green-600 hover:bg-green-700 text-white px-3 py-1 text-sm">
                                    Detail
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        (function () {
            document.querySelectorAll('[id^="RegisterCoordinates-"]').forEach(function (ta) {
                var displayEl = document.getElementById(ta.id.replace('RegisterCoordinates-', 'RegisterDisplayCoordinates-'));
                if (!displayEl) return;

                if (!ta.value || !ta.value.trim()) {
                    displayEl.textContent = 'No coordinates';
                    return;
                }

                try {
                    var geojson = JSON.parse(ta.value);
                    var coords;

                    if (geojson.type === "FeatureCollection") {
                        coords = geojson.features.map(f => f.geometry.coordinates);
                    } else if (geojson.type === "Feature") {
                        coords = geojson.geometry.coordinates;
                    } else {
                        coords = geojson.coordinates;
                    }

                    function formatCoords(c) {
                        if (Array.isArray(c) && c.length && typeof c[0] === 'number') return c.join(',');
                        if (Array.isArray(c) && c.length && Array.isArray(c[0])) return c.map(p => p.join(',')).join(' | ');
                        return JSON.stringify(c);
                    }

                    displayEl.textContent = formatCoords(coords);

                } catch (err) {
                    console.error('Invalid GeoJSON for', ta.id, err);
                    displayEl.textContent = 'Invalid coordinates';
                }
            });
        })();
    </script>
}
