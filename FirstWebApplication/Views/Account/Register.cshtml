@model FirstWebApplication.Models.ViewModel.RegisterViewModel
@{
}

@section Styles {
    <link rel="stylesheet" href="~/css/Register.css" />
}

<div class="register-wrapper">
    <div class="register-box">
        <h2>Registrer deg</h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" id="username" class="form-control" asp-for="Username" />
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" id="email" class="form-control" asp-for="Email" />
            </div>

            <div class="mb-3">
                <label asp-for="DesiredRole" class="form-label">Ønsket rolle</label>
                <select asp-for="DesiredRole" class="form-select">
                    <option value="">-- Velg rolle --</option>
                    <option value="Pilot">Pilot</option>
                    <option value="Registerfører">Registerfører</option>
                </select>
                <span asp-validation-for="DesiredRole" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" id="password" class="form-control" asp-for="Password" />
            </div>

            <div class="register-button-2">
                <button type="submit" class="btn btn-primary">Registrer deg</button>
            </div>

            <div class="login-link mt-3 text-center">
                Har du allerede konto? <a asp-action="Login">Logg inn</a>
            </div>
        </form>
    </div>
</div>
