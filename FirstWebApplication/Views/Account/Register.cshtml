@model FirstWebApplication.Models.ViewModel.RegisterViewModel
@using System.Text.Json
@using System.Linq
@{
    var pwReqs = ViewBag.PasswordRequirements as IEnumerable<string>;
    var organizations = ViewBag.OrganizationOptions as IEnumerable<string> ?? Enumerable.Empty<string>();
}

@section Styles {
    <link rel="stylesheet" href="~/css/Register.css" />
}

<div class="register-wrapper">
    <div class="register-box">
        <h2>Registrer deg</h2>

        <form asp-action="Register" method="post" novalidate>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label class="form-label">Brukernavn</label>
                <input type="text" id="username" class="form-control" asp-for="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">E-post</label>
                <input type="email" id="email" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DesiredRole" class="form-label">Ønsket rolle</label>
                <select asp-for="DesiredRole" class="form-select">
                    <option value="">-- Velg rolle --</option>
                    <option value="Pilot">Pilot</option>
                    <option value="Registerfører">Registerfører</option>
                </select>
                <span asp-validation-for="DesiredRole" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Organization" class="form-label">Organisasjon</label>
                <select asp-for="Organization" class="form-select">
                    <option value="">-- Velg organisasjon --</option>
                    @foreach (var org in organizations)
                    {
                        <option value="@org">@org</option>
                    }
                </select>
                <span asp-validation-for="Organization" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Passord</label>
                <input type="password" id="password" class="form-control" asp-for="Password" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                
            </div>

            <div class="register-button-2">
                <button type="submit" class="btn btn-primary">Registrer deg</button>
            </div>

            <div class="login-link mt-3 text-center">
                Har du allerede konto? <a asp-action="Login">Logg inn</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/site.js"></script>
}
