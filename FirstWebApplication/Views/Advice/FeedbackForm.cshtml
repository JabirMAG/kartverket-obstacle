@model FirstWebApplication.Models.Advice
@{
    // Setter tittelen på siden
    ViewData["Title"] = "Feedback";
}
<h2>Gi oss din feedback</h2>

<!-- Form som sender data til samme action-metode i AdviceController via POST -->
<form method="post">
    <!-- Tekstområde for å skrive selve tilbakemeldingen -->
    <textarea asp-for="adviceMessage" placeholder="Skriv her..." rows="6" cols="50"></textarea>

    <!-- Input-felt for e-post, koblet til modellen Advice.Email -->
    <input type="email"  placeholder="Email.." asp-for="Email" />

    <!-- Input-felt for ID, koblet til modellen Advice.adviceID -->
    <input type="number" placeholder="ID" asp-for="adviceID" />

    <br />
    <!-- Submit-knapp som sender inn skjemaet -->
    <button type="submit">Send</button>
</form>



