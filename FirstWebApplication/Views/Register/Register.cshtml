@model IEnumerable<FirstWebApplication.Models.ObstacleData>

@{
    ViewData["Title"] = "Obstacle Register";
}

<section class="mx-auto max-w-4xl space-y-6">
    @foreach (var obstacle in Model)
    {
        var mapId = $"Register-map-{obstacle.ObstacleId}";
        var coordsId = $"RegisterCoordinates-{obstacle.ObstacleId}";

        <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-6 space-y-4">
            <dl class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-600">Obstacle Name</dt>
                    <dd class="mt-1 text-base text-gray-900 break-words">@obstacle.ObstacleName</dd>
                </div>

                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-600">Height (m)</dt>
                    <dd class="mt-1 text-base text-gray-900">@obstacle.ObstacleHeight</dd>
                </div>

                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-600">Description</dt>
                    <dd class="mt-1 text-base text-gray-900 break-words">@obstacle.ObstacleDescription</dd>
                </div>

                <div class="space-y-3 sm:col-span-3">
                    <label class="block text-sm font-medium text-gray-800">Geometry (map)</label>
                    <div id="@mapId" style="height: 420px; border-radius: 0.75rem; overflow: hidden; border: 1px solid #e5e7eb;"></div>
                </div>

                <div class="space-y-2 sm:col-span-3">
                    <label for="@coordsId" class="block text-sm font-medium text-gray-800">Geometry (raw GeoJSON)</label>
                    <textarea id="@coordsId" class="hidden">@obstacle.GeometryGeoJson</textarea>
                </div>
            </dl>

            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    var map = L.map('@mapId').setView([20, 0], 2);
                    map.scrollWheelZoom.disable();

                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        maxZoom: 19,
                        attribution: '&copy; OpenStreetMap contributors'
                    }).addTo(map);

                    var jsontext = document.getElementById('@coordsId').value;

                    if (jsontext && jsontext.trim().length > 0) {
                        try {
                            var geojson = JSON.parse(jsontext);
                            var layer = L.geoJSON(geojson, {
                                pointToLayer: function (feature, latlng) {
                                    return L.marker(latlng);
                                }
                            }).addTo(map);

                            if (layer.getBounds && layer.getBounds().isValid()) {
                                map.fitBounds(layer.getBounds());
                            }
                        } catch (err) {
                            console.error("Invalid GeoJSON:", err);
                            alert("Could not render geometry on map.");
                        }
                    }
                });
            </script>
        </div>
    }
</section>

@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
}