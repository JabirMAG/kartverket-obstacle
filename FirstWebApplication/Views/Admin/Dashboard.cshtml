@{
    ViewData["Title"] = "Admin dashboard";
}

<link rel="stylesheet" href="~/css/AdminDashboard.css" />

<div class="admin-dashboard-container">
    <div class="admin-dashboard-header">
        <h1 class="admin-dashboard-title">Admin Dashboard</h1>
        <p class="admin-dashboard-subtitle">Velkommen! Her kan du administrere brukere og roller.</p>
    </div>

    <div class="admin-action-cards">
        <a href="@Url.Action("ManageUsers", "Admin")" class="admin-action-card">
            <h3 class="admin-action-card-title">Brukerhåndtering</h3>
            <p class="admin-action-card-description">
                Administrer brukere, roller og godkjenninger. Opprett nye brukere og tildel roller.
            </p>
            <span class="admin-action-card-button">Gå til brukerhåndtering</span>
        </a>

        <a href="@Url.Action("Reports", "Admin")" class="admin-action-card">
            <h3 class="admin-action-card-title">Rapporter</h3>
            <p class="admin-action-card-description">
                Se og administrer alle hindringsrapporter. Godkjenn eller avvis rapporter.
            </p>
            <span class="admin-action-card-button">Se rapporter</span>
        </a>
    </div>
</div>
