@model IEnumerable<FirstWebApplication.Models.ArchivedReport>
@using System.Text.Json

@{
    ViewData["Title"] = "Arkiverte rapporter";
}

<link rel="stylesheet" href="~/css/ArchivedReports.css" />

<div class="archived-reports-page">
    <h1 class="archived-reports-title">Arkiverte rapporter</h1>

    @if (TempData["Success"] != null)
    {
        <div class="archived-reports-alert archived-reports-alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="archived-reports-alert archived-reports-alert-danger">@TempData["Error"]</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="archived-reports-alert archived-reports-alert-info">
            <p>Ingen arkiverte rapporter funnet.</p>
        </div>
    }
    else
    {
        <div class="archived-reports-count">
            <p>Totalt @Model.Count() arkiverte rapport(er)</p>
        </div>
        
        <table class="archived-reports-table">
        <thead>
            <tr>
                <th>Navn</th>
                <th>Høyde (m)</th>
                <th>Beskrivelse</th>
                <th>Antall kommentarer</th>
                <th>Arkivert dato</th>
                <th class="archived-reports-actions">Handlinger</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var archivedReport in Model)
            {
                // Parse JSON comments
                List<string> comments = new List<string>();
                try
                {
                    if (!string.IsNullOrEmpty(archivedReport.RapportComments))
                    {
                        comments = JsonSerializer.Deserialize<List<string>>(archivedReport.RapportComments) ?? new List<string>();
                    }
                }
                catch
                {
                    // If JSON parsing fails, treat as empty
                    comments = new List<string>();
                }
                
                <tr>
                    <td>
                        <strong class="archived-reports-name">@archivedReport.ObstacleName</strong>
                    </td>
                    <td>@archivedReport.ObstacleHeight</td>
                    <td>
                        @if (!string.IsNullOrEmpty(archivedReport.ObstacleDescription))
                        {
                            <span>@(archivedReport.ObstacleDescription.Length > 50 ? archivedReport.ObstacleDescription.Substring(0, 50) + "..." : archivedReport.ObstacleDescription)</span>
                        }
                        else
                        {
                            <span class="archived-reports-text-muted">Ingen beskrivelse</span>
                        }
                    </td>
                    <td>
                        <span class="archived-reports-badge archived-reports-badge-secondary">@comments.Count</span>
                    </td>
                    <td>
                        <small class="archived-reports-date">@archivedReport.ArchivedDate.ToString("dd.MM.yyyy HH:mm")</small>
                    </td>
                    <td class="archived-reports-actions">
                        <div class="archived-reports-button-group">
                            <button type="button" class="archived-reports-button" onclick="document.getElementById('detailsModal@(archivedReport.ArchivedReportId)').classList.add('show')">
                                Se detaljer
                            </button>
                            <form asp-controller="Admin" asp-action="RestoreArchivedReport" method="post" class="archived-reports-inline-form">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="archivedReportId" value="@archivedReport.ArchivedReportId" />
                                <input type="hidden" name="newStatus" value="1" />
                                <button type="submit" class="archived-reports-button archived-reports-button-success" onclick="return confirm('Er du sikker på at du vil gjenopprette denne rapporten med status \"Under behandling\"?');">
                                    Gjenopprett (Under behandling)
                                </button>
                            </form>
                            <form asp-controller="Admin" asp-action="RestoreArchivedReport" method="post" class="archived-reports-inline-form">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="archivedReportId" value="@archivedReport.ArchivedReportId" />
                                <input type="hidden" name="newStatus" value="2" />
                                <button type="submit" class="archived-reports-button archived-reports-button-success" onclick="return confirm('Er du sikker på at du vil gjenopprette denne rapporten med status \"Godkjent\"?');">
                                    Gjenopprett (Godkjent)
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                
                <!-- Details Modal -->
                <div class="archived-reports-modal" id="detailsModal@(archivedReport.ArchivedReportId)" onclick="if(event.target === this) this.classList.remove('show')">
                    <div class="archived-reports-modal-dialog" onclick="event.stopPropagation()">
                        <div>
                            <div class="archived-reports-modal-header">
                                <h5 class="archived-reports-modal-title" id="detailsModalLabel@(archivedReport.ArchivedReportId)">Detaljer for @archivedReport.ObstacleName</h5>
                                <button type="button" class="archived-reports-modal-close" onclick="document.getElementById('detailsModal@(archivedReport.ArchivedReportId)').classList.remove('show')" aria-label="Close">×</button>
                            </div>
                            <div class="archived-reports-modal-body">
                                <div class="archived-reports-modal-row">
                                    <div>
                                        <strong class="archived-reports-modal-label">Navn:</strong> @archivedReport.ObstacleName
                                    </div>
                                    <div>
                                        <strong class="archived-reports-modal-label">Høyde:</strong> @archivedReport.ObstacleHeight m
                                    </div>
                                </div>
                                
                                <div class="archived-reports-modal-row">
                                    <div>
                                        <strong class="archived-reports-modal-label">Beskrivelse:</strong>
                                        <p>@(string.IsNullOrEmpty(archivedReport.ObstacleDescription) ? "Ingen beskrivelse" : archivedReport.ObstacleDescription)</p>
                                    </div>
                                </div>
                                
                                <div class="archived-reports-modal-row">
                                    <div>
                                        <strong class="archived-reports-modal-label">Original Obstacle ID:</strong> @archivedReport.OriginalObstacleId
                                    </div>
                                    <div>
                                        <strong class="archived-reports-modal-label">Arkivert:</strong> @archivedReport.ArchivedDate.ToString("dd.MM.yyyy HH:mm")
                                    </div>
                                </div>
                                
                                <div class="archived-reports-modal-row">
                                    <div>
                                        <strong class="archived-reports-modal-label">Status:</strong>
                                        <span class="archived-reports-badge archived-reports-badge-danger">Avslått</span>
                                    </div>
                                </div>
                                
                                @if (comments.Any())
                                {
                                    <div class="archived-reports-modal-row">
                                        <div>
                                            <strong class="archived-reports-modal-label">Kommentarer (@comments.Count):</strong>
                                            <ul class="archived-reports-modal-comments-list">
                                                @foreach (var comment in comments)
                                                {
                                                    <li class="archived-reports-modal-comment-item">
                                                        <div class="archived-reports-modal-comment-box">
                                                            <p>@comment</p>
                                                        </div>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="archived-reports-modal-row">
                                        <div>
                                            <strong class="archived-reports-modal-label">Kommentarer:</strong>
                                            <p class="archived-reports-text-muted">Ingen kommentarer</p>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="archived-reports-modal-footer">
                                <form asp-controller="Admin" asp-action="RestoreArchivedReport" method="post" class="archived-reports-inline-form">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="archivedReportId" value="@archivedReport.ArchivedReportId" />
                                    <div class="archived-reports-modal-form-group">
                                        <label for="newStatus@(archivedReport.ArchivedReportId)">Gjenopprett med status:</label>
                                        <select name="newStatus" id="newStatus@(archivedReport.ArchivedReportId)" class="archived-reports-modal-select">
                                            <option value="1">Under behandling</option>
                                            <option value="2">Godkjent</option>
                                        </select>
                                        <button type="submit" class="archived-reports-modal-button archived-reports-modal-button-success" onclick="return confirm('Er du sikker på at du vil gjenopprette denne rapporten?');">
                                            Gjenopprett
                                        </button>
                                    </div>
                                </form>
                                <button type="button" class="archived-reports-modal-button archived-reports-modal-button-secondary" onclick="document.getElementById('detailsModal@(archivedReport.ArchivedReportId)').classList.remove('show')">Lukk</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
    }
</div>

