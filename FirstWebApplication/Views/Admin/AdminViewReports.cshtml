@model IEnumerable<FirstWebApplication.Models.RapportData>

@{
    ViewData["Title"] = "Rapporter";
}

<h1 class="display-6">Rapporter</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        <p>Ingen rapporter funnet.</p>
    </div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Navn</th>
                <th>HÃ¸yde (m)</th>
                <th class="text-end">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rapport in Model)
            {
                <tr>
                    <td>
                        @if (rapport.Obstacle != null)
                        {
                            <a asp-controller="Admin" asp-action="DetaljerOmRapport" asp-route-obstacleId="@rapport.Obstacle.ObstacleId" class="text-decoration-none">
                                @rapport.Obstacle.ObstacleName
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td>
                    <td>@(rapport.Obstacle?.ObstacleHeight ?? 0)</td>
                    <td class="text-end">
                        @if (rapport.Obstacle != null)
                        {
                            var statusText = rapport.Obstacle.ObstacleStatus switch
                            {
                                1 => "Pending",
                                2 => "Approved",
                                3 => "Rejected",
                                _ => "Ukjent"
                            };
                            var statusBadge = rapport.Obstacle.ObstacleStatus == 1 ? "bg-warning" : rapport.Obstacle.ObstacleStatus == 2 ? "bg-success" : "bg-danger";
                            
                            <div class="d-flex align-items-center justify-content-end gap-2">
                                <span class="badge @statusBadge">@statusText</span>
                                <a asp-controller="Admin" asp-action="DetaljerOmRapport" asp-route-obstacleId="@rapport.Obstacle.ObstacleId" class="btn btn-sm btn-outline-primary">
                                    Se detaljer
                                </a>
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

