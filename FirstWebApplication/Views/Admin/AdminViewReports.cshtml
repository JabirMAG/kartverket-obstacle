@model IEnumerable<FirstWebApplication.Models.RapportData>

@{
    ViewData["Title"] = "Rapporter";
}

<link rel="stylesheet" href="~/css/AdminViewReports.css" />

<div class="admin-reports-page">
    <h1 class="admin-reports-title">Rapporter</h1>

    @if (TempData["Success"] != null)
    {
        <div class="admin-reports-alert admin-reports-alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="admin-reports-alert admin-reports-alert-danger">@TempData["Error"]</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="admin-reports-alert admin-reports-alert-info">
            <p>Ingen rapporter funnet.</p>
        </div>
    }
    else
    {
        <table class="admin-reports-table">
        <thead>
            <tr>
                <th>Navn</th>
                <th>Registrert av</th>
                <th>Høyde (m)</th>
                <th class="text-end">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rapport in Model)
            {
                <tr>
                    <td>
                        @if (rapport.Obstacle != null)
                        {
                            <a asp-controller="Admin" asp-action="DetaljerOmRapport" asp-route-obstacleId="@rapport.Obstacle.ObstacleId" class="admin-reports-link">
                                @rapport.Obstacle.ObstacleName
                            </a>
                        }
                        else
                        {
                            <span class="admin-reports-text-muted">N/A</span>
                        }
                    </td>
                    <td>
                        @if (rapport.Obstacle?.OwnerUser != null)
                        {
                            @(rapport.Obstacle.OwnerUser.UserName ?? rapport.Obstacle.OwnerUser.Email ?? "Ukjent bruker")
                        }
                        else
                        {
                            <span class="admin-reports-text-muted">N/A</span>
                        }
                    </td>
                    <td>@(rapport.Obstacle?.ObstacleHeight ?? 0)</td>
                    <td class="admin-reports-text-end">
                        @if (rapport.Obstacle != null)
                        {
                            var statusText = rapport.Obstacle.ObstacleStatus switch
                            {
                                1 => "Under behandling",
                                2 => "Godkjent",
                                3 => "Avslått",
                                _ => "Ukjent"
                            };
                            var statusClass = rapport.Obstacle.ObstacleStatus == 1 ? "admin-reports-status-warning" : rapport.Obstacle.ObstacleStatus == 2 ? "admin-reports-status-success" : "admin-reports-status-danger";
                            
                            <div class="admin-reports-actions">
                                <span class="admin-reports-status-badge @statusClass">@statusText</span>
                                <a asp-controller="Admin" asp-action="DetaljerOmRapport" asp-route-obstacleId="@rapport.Obstacle.ObstacleId" class="admin-reports-button">
                                    Se detaljer
                                </a>
                            </div>
                        }
                        else
                        {
                            <span class="admin-reports-text-muted">N/A</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
</div>

