@model FirstWebApplication.Models.AdminViewModels.CreateUserVm
@using System.Text.Json
@using System.Linq
@{
    ViewData["Title"] = "Opprett ny bruker";
    var roles = (string[])ViewBag.AssignableRoles;
    var pwReqs = ViewBag.PasswordRequirements as IEnumerable<string>;
    var pwPolicy = ViewBag.PasswordPolicy;
    var pwPolicyJson = pwPolicy != null ? JsonSerializer.Serialize(pwPolicy) : "{}";
    var organizations = ViewBag.OrganizationOptions as IEnumerable<string> ?? Enumerable.Empty<string>();
}

<link rel="stylesheet" href="~/css/CreateUser.css" />

<div class="create-user-page">
    <h1 class="create-user-title">Opprett ny bruker</h1>

    <form asp-action="CreateUser" method="post" class="create-user-form" novalidate>
        @Html.AntiForgeryToken()
        <div class="create-user-form-group">
            <label asp-for="Username" class="create-user-form-label"></label>
            <input asp-for="Username" class="create-user-form-control" id="Username" />
            <span asp-validation-for="Username" class="create-user-validation-error"></span>
        </div>

        <div class="create-user-form-group">
            <label asp-for="Email" class="create-user-form-label"></label>
            <input asp-for="Email" class="create-user-form-control" id="Email" />
            <span asp-validation-for="Email" class="create-user-validation-error"></span>
        </div>

        <div class="create-user-form-group">
            <label asp-for="Password" class="create-user-form-label"></label>
            <input asp-for="Password" class="create-user-form-control" type="password" id="Password" autocomplete="new-password" />
            <span asp-validation-for="Password" class="create-user-validation-error"></span>

            @* Adaptive password requirements UI *@
            <div id="pw-reqs-container" class="create-user-password-requirements" data-policy='@Html.Raw(pwPolicyJson)'>
                <strong>Krav til passord:</strong>
                <ul id="pw-reqs">
                    @if (pwReqs != null && pwReqs.Any())
                    {
                        var idx = 0;
                        foreach (var r in pwReqs)
                        {
                            <li data-req-index="@idx" class="create-user-password-requirement-item">
                                <span class="create-user-password-requirement-icon">◻</span> <span class="pw-req-text">@r</span>
                            </li>
                            idx++;
                        }
                    }
                    else
                    {
                        <li class="create-user-password-requirement-item">Standard passordkrav gjelder.</li>
                    }
                </ul>
            </div>
        </div>

        <div class="create-user-form-group">
            <label asp-for="Role" class="create-user-form-label">Rolle</label>
            <select asp-for="Role" class="create-user-form-select" id="Role">
                @foreach (var r in roles)
                {
                    <option value="@r">@r</option>
                }
            </select>
            <span asp-validation-for="Role" class="create-user-validation-error"></span>
        </div>

        <div class="create-user-form-group">
            <label asp-for="Organization" class="create-user-form-label">Organisasjon</label>
            <select asp-for="Organization" class="create-user-form-select" id="Organization">
                <option value="">-- Velg organisasjon --</option>
                @foreach (var org in organizations)
                {
                    <option value="@org">@org</option>
                }
            </select>
            <span asp-validation-for="Organization" class="create-user-validation-error"></span>
        </div>

        <button type="submit" class="create-user-button create-user-button-success">Opprett</button>
        <a asp-action="ManageUsers" class="create-user-button create-user-button-secondary">Tilbake</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/site.js"></script>
}
