@model FirstWebApplication.Models.ViewModel.ObstacleDataViewModel

@{
    ViewData["Title"] = "Oversikt";
}

<link rel="stylesheet" href="~/css/Overview.css" />

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="display-6 mb-3">Oversikt</h1>
            <p class="text-muted mb-4">Takk for at du registrerte en hindring:</p>
        </div>
    </div>

    <div class="row">
        <!-- Overview Section -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Hindringsdetaljer</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Hindringens navn:</dt>
                        <dd class="col-sm-8">@Model.ViewObstacleName</dd>

                        <dt class="col-sm-4">Høyde:</dt>
                        <dd class="col-sm-8">@Model.ViewObstacleHeight m</dd>

                        <dt class="col-sm-4">Beskrivelse:</dt>
                        <dd class="col-sm-8">@Model.ViewObstacleDescription</dd>

                        <dt class="col-sm-4">Koordinater:</dt>
                        <dd class="col-sm-8">
                            <code id="geoJsonCoordinates" class="small"></code>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="mt-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    ← Tilbake til hjem
                </a>
                <a asp-controller="Map" asp-action="Map" class="btn btn-secondary">
                    ← Tilbake til Kartet
                </a>
            </div>
        </div>

        <!-- Map Section -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Geometri (Kart)</h5>
                </div>
                <div class="card-body p-0">
                    <div id="overview-map"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden field for GeoJSON data -->
<textarea id="OverviewCoordinates">@Model.ViewGeometryGeoJson</textarea>

@section Scripts {
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin="" />

    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>

    <script>
        (function() {
            var jsontext = document.getElementById('OverviewCoordinates').value;
            var coordsElement = document.getElementById('geoJsonCoordinates');

            try {
                var geojson = JSON.parse(jsontext);
                var coordinates;

                if (geojson.type === "FeatureCollection") {
                    coordinates = geojson.features.map(f => f.geometry.coordinates);
                } else if (geojson.type === "Feature") {
                    coordinates = geojson.geometry.coordinates;
                } else {
                    coordinates = geojson.coordinates;
                }

                coordsElement.textContent = JSON.stringify(coordinates);

                // --- Leaflet map initialization ---
                var map = L.map('overview-map'); // the div ID
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '&copy; OpenStreetMap contributors'
                }).addTo(map);

                // Add the GeoJSON layer
                var geojsonLayer = L.geoJSON(geojson).addTo(map);

                // Fit the map view to the GeoJSON bounds
                map.fitBounds(geojsonLayer.getBounds());

            } catch (err) {
                console.error("Invalid GeoJSON:", err);
                coordsElement.textContent = "Ugyldige koordinater";
            }
        })();
    </script>


}
