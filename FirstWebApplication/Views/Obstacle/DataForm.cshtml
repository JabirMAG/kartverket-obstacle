@model FirstWebApplication.Models.ViewModel.ObstacleDataViewModel

@{
    // Setter tittelen på siden
    ViewData["Title"] = "Register Obstacle";
}

<!-- Seksjon som sentrerer innholdet og setter maksimal bredde -->
<section class="mx-auto max-w-2xl">
    <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-6">
        <header class="mb-6">
            <!-- Hovedoverskrift og kort beskrivelse -->
            <h1 class="text-2xl font-semibold">Obstacle Registration Form</h1>
            <p class="text-gray-600 mt-1">Please register an obstacle:</p>
        </header>

        <!-- Form som sender data til ObstacleController.DataForm via POST -->
        <form asp-action="DataForm" method="post" class="space-y-6">
             <div class="grid gap-5 sm:grid-cols-2">

        <!-- Obstacle Name -->
        <div class="sm:col-span-2">
          <label asp-for="ViewObstacleName" class="block text-sm font-medium text-gray-800 mb-1">Obstacle Name</label>
          <input asp-for="ViewObstacleName" 
                    class="block w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2" 
                    placeholder="e.g., Wall, Ramp" />
                    <!-- Viser valideringsfeil for ObstacleName -->
          <span asp-validation-for="ViewObstacleName" class="text-sm text-red-600"></span>
        </div>
        <!-- Height -->
        <div>
                    <label asp-for="ViewObstacleHeight" class="block text-sm font-medium text-gray-800 mb-1">
                    Obstacle Height (meters)
                    </label>
                    <input asp-for="ViewObstacleHeight" type="number" step="0.01" min="0" 
                    class="block w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2" 
                    placeholder="e.g., 2.5" />
                    <!-- Viser valideringsfeil for ObstacleHeight -->
                    <span asp-validation-for="ViewObstacleHeight" class="text-sm text-red-600"></span>
                </div>
         <!-- Description -->
         <div class="sm:col-span-2">
                    <label asp-for="ViewObstacleDescription" class="block text-sm font-medium text-gray-800 mb-1">
                        Obstacle Description
                    </label>
                    <textarea asp-for="ViewObstacleDescription" rows="5" 
                    class="block w-full rounded-xl border-gray-300 focus:border-indigo-300 focus:ring-indigo-600 px-4 py-3 resize-none shadow-sm" 
                    placeholder="Describe the obstacle, materials, location, etc."></textarea>
                    <!-- Viser valideringsfeil for ObstacleDescription -->
                    <span asp-validation-for="ViewObstacleDescription" class="text-sm text-red-600"></span>
                </div>
            </div>

            <!-- Submit-knapp -->
            <div
                class="pt-2">
                <button type="Submit" 
                    class="w-full sm:w-auto inline-flex items-center justify-center rounded-xl bg-indigo-900 px-6 py-3 text-black font-semibold shadow-lg hover:from-indigo-600 hover:to-indigo-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-600 transition-all duration-200">
                    Submit Data
                </button>
            </div>
        </form>
    </div>
</section>

<!-- Seksjon for klient-side validering -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}