@model FirstWebApplication.Models.ObstacleData

@{
    // Setter tittelen på siden
    ViewData["Title"] = "Overview";
}

<!-- Seksjon som sentrerer innholdet og setter maksimal bredde -->
<section class="mx-auto max-w-2xl">
    <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-6 space-y-4">
        <header>
            <h1 class="text-2xl font-semibold">Overview</h1>
            <p class="text-gray-600 mt-1">Thank you for registering an obstacle:</p>
        </header>

        <dl class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-600">Obstacle Name</dt>
                <dd class="mt-1 text-base text-gray-900 break-words">@Model.ObstacleName</dd>
            </div>

            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-600">Height (m)</dt>
                <dd class="mt-1 text-base text-gray-900">@Model.ObstacleHeight</dd>
            </div>

            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-600">Description</dt>
                <dd class="mt-1 text-base text-gray-900 break-words">@Model.ObstacleDescription</dd>
            </div>

            <div class="space-y-3 sm:col-span-3">
                <label class="block text-sm font-medium text-gray-800">Geometry (map)</label>
                <div id="overview-map" style="height: 420px; border-radius: 0.75rem; overflow: hidden; border: 1px solid #e5e7eb;"></div>
            </div>

            <div class="space-y-2 sm:col-span-3">
                <textarea id="OverviewCoordinates" style="display:none;">@Model.GeometryGeoJson</textarea>
            </div>

            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-600">Coordinates</dt>
                <dd id="geoJsonCoordinates"></dd>
            </div>


            <div class="pt-2 sm:col-span-3">
                <a asp-controller="Home" asp-action="Index"
                   class="inline-flex items-center rounded-lg px-4 py-2 ring-1 ring-gray-300 hover:bg-gray-50">
                    Back to Home
                </a>
            </div>
        </dl>

    </div>
</section>

@section Scripts {
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin="" />

    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>

    <script>
        (function() {
            var jsontext = document.getElementById('OverviewCoordinates').value;
            var coordsElement = document.getElementById('geoJsonCoordinates');

            try {
                var geojson = JSON.parse(jsontext);
                var coordinates;

                if (geojson.type === "FeatureCollection") {
                    coordinates = geojson.features.map(f => f.geometry.coordinates);
                } else if (geojson.type === "Feature") {
                    coordinates = geojson.geometry.coordinates;
                } else {
                    coordinates = geojson.coordinates;
                }

                coordsElement.textContent = JSON.stringify(coordinates);

                // --- Leaflet map initialization ---
                var map = L.map('overview-map'); // the div ID
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '&copy; OpenStreetMap contributors'
                }).addTo(map);

                // Add the GeoJSON layer
                var geojsonLayer = L.geoJSON(geojson).addTo(map);

                // Fit the map view to the GeoJSON bounds
                map.fitBounds(geojsonLayer.getBounds());

            } catch (err) {
                console.error("Invalid GeoJSON:", err);
                coordsElement.textContent = "Invalid coordinates";
            }
        })();
    </script>


}
