@model FirstWebApplication.Models.ObstacleData

@{
    ViewData["Title"] = "Registrer hindring";
}

<link rel="stylesheet" href="~/css/_ObstacleFormPartial.css" />

<div class="obstacle-form-overlay">
    <div class="obstacle-form-container">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Registrer en hindring</h5>
                <p class="text-muted mb-0 small">Fyll inn hindringens detaljer nedenfor.</p>
            </div>
            <div class="card-body">
                <form asp-controller="Obstacle" asp-action="SubmitObstacle" method="post" id="obstacle-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="GeometryGeoJson" id="GeometryGeoJson" />
                    <input type="hidden" id="coordinatesOnly" name="GeometryGeoCoordinates" />

                    <!-- Warning about existing pending obstacle -->
                        <div id="pending-obstacle-warning" class="alert alert-warning mb-3" style="display: none;">
                        <strong>⚠ Advarsel:</strong> <span class="warning-text"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ObstacleName" class="form-label">Hindringens navn</label>
                        <input asp-for="ObstacleName"
                               class="form-control"
                               placeholder="f.eks. Høyspentledning, kran" />
                        <span asp-validation-for="ObstacleName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ObstacleHeight" class="form-label">Høyde (meter)</label>
                        <input asp-for="ObstacleHeight"
                               type="number"
                               step="0.01"
                               min="0"
                               class="form-control"
                               placeholder="f.eks. 2,5" />
                        <span asp-validation-for="ObstacleHeight" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ObstacleDescription" class="form-label">Beskrivelse</label>
                        <textarea asp-for="ObstacleDescription"
                                  rows="3"
                                  class="form-control"
                                  placeholder="Beskriv hindringen, plassering, material, osv. Beskriv hindringen, men ikke hva den er for."></textarea>
                        <span asp-validation-for="ObstacleDescription" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-end obstacle-form-buttons">
                        <button type="button"
                                class="btn btn-cancel-custom"
                                id="cancel-obstacle-button"
                                aria-label="Avbryt og gå tilbake til kartet">
                            Avbryt
                        </button>
                        <button type="submit"
                                formaction="/Obstacle/QuickSaveObstacle"
                                class="btn btn-orange-custom"
                                id="obstacle-quick-save-button"
                                aria-label="Hurtiglagre hindring">
                            Hurtigknapp
                        </button>
                        <button type="submit"
                                class="btn btn-green-custom"
                                id="obstacle-submit-button"
                                aria-label="Send inn hindring">
                            Send inn
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("obstacle-form");

            if (form) {
                form.addEventListener("submit", function () {
                });
            }
        });
    </script>
}
