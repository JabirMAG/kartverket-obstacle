@model FirstWebApplication.Models.ObstacleData
@using System.Text.Json
@using System.Linq

@{
    ViewData["Title"] = Model?.ObstacleName ?? "Detaljer om rapport";
    var obstacle = ViewBag.Obstacle as FirstWebApplication.Models.ObstacleData ?? Model;
    var rapports = ViewBag.Rapports as List<FirstWebApplication.Models.RapportData>;
}

<h1 class="display-6">@(obstacle?.ObstacleName ?? "N/A")</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="mt-3">
    <a class="btn btn-secondary" asp-controller="Pilot" asp-action="Index">← Tilbake til mine rapporter</a>
</div>

@if (obstacle == null)
{
    <div class="alert alert-danger mt-3">
        <p>Fant ikke hindring.</p>
    </div>
}
else
{
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="card-title mb-0">Oversikt over hindring</h5>
                    @{
                        var statusText = obstacle.ObstacleStatus == 1 ? "Under behandling" : obstacle.ObstacleStatus == 2 ? "Godkjent" : "Avslått";
                        var statusBadge = obstacle.ObstacleStatus == 1 ? "bg-warning" : obstacle.ObstacleStatus == 2 ? "bg-success" : "bg-danger";
                    }
                    <span class="badge @statusBadge">@statusText</span>
                </div>
                <div class="card-body">
                    @if (obstacle.ObstacleStatus == 1)
                    {
                        <form asp-controller="Pilot" asp-action="UpdateObstacle" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="obstacleId" value="@obstacle.ObstacleId" />
                            <div class="mb-3">
                                <label for="obstacleName" class="form-label">Navn</label>
                                <input id="obstacleName" name="obstacleName" class="form-control" value="@obstacle.ObstacleName" maxlength="100" required />
                            </div>
                            <div class="mb-3">
                                <label for="obstacleHeight" class="form-label">Høyde (m)</label>
                                <input id="obstacleHeight" name="obstacleHeight" type="number" step="0.01" min="0" max="200" class="form-control" value="@obstacle.ObstacleHeight" required />
                            </div>
                            <div class="mb-3">
                                <label for="obstacleDescription" class="form-label">Beskrivelse</label>
                                <textarea id="obstacleDescription" name="obstacleDescription" class="form-control" rows="3" maxlength="1000" required>@obstacle.ObstacleDescription</textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Lagre endringer</button>
                        </form>
                    }
                    else
                    {
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Navn:</dt>
                            <dd class="col-sm-8">@obstacle.ObstacleName</dd>
                            <dt class="col-sm-4">Høyde:</dt>
                            <dd class="col-sm-8">@obstacle.ObstacleHeight m</dd>
                            <dt class="col-sm-4">Beskrivelse:</dt>
                            <dd class="col-sm-8">@obstacle.ObstacleDescription</dd>
                        </dl>
                        <p class="text-muted mt-3 mb-0">Redigering er ikke mulig etter at hindringen er godkjent eller avslått.</p>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">Kommentarer</h5>
                </div>
                <div class="card-body">
                    @{
                        var adminComments = rapports?.Where(r => !(r.RapportComment.StartsWith("Hindring '") && r.RapportComment.Contains(" ble sendt inn. Høyde:"))).ToList();
                    }
                    @if (adminComments != null && adminComments.Any())
                    {
                        <div class="mb-3">
                            <h6 class="mb-2">Eksisterende kommentarer:</h6>
                            <ul class="list-unstyled">
                                @foreach (var rapport in adminComments.OrderByDescending(r => r.RapportID))
                                {
                                    <li class="mb-2">
                                        <div class="border rounded p-2 bg-light">
                                            <small class="text-muted">Kommentar #@rapport.RapportID</small>
                                            <p class="mb-0 mt-1">@rapport.RapportComment</p>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <p class="text-muted">Ingen kommentarer ennå.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Kart</h5>
                </div>
                <div class="card-body p-0">
                    <div id="detail-map" style="height: 400px; width: 100%;"></div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            @if (obstacle != null && !string.IsNullOrEmpty(obstacle.GeometryGeoJson))
            {
                    <text>
                    var geometryGeoJson = @Html.Raw(obstacle.GeometryGeoJson);
                    try {
                        var geojson = typeof geometryGeoJson === 'string' ? JSON.parse(geometryGeoJson) : geometryGeoJson;
                        var map = L.map('detail-map');
                        L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                        }).addTo(map);
                        var geojsonLayer = L.geoJSON(geojson, {
                            pointToLayer: function (feature, latlng) {
                                return L.marker(latlng);
                            },
                            style: function () {
                                return { color: '#3388ff', weight: 3, opacity: 0.8 };
                            }
                        }).addTo(map);
                        if (geojsonLayer.getBounds && geojsonLayer.getBounds().isValid()) {
                            map.fitBounds(geojsonLayer.getBounds().pad(0.1));
                        } else {
                            map.setView([59.9139, 10.7522], 7);
                        }
                    } catch (err) {
                        console.error("Error rendering map:", err);
                        var map = L.map('detail-map').setView([59.9139, 10.7522], 7);
                        L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                        }).addTo(map);
                    }
                    </text>
            }
            else
            {
                    <text>
                    var map = L.map('detail-map').setView([59.9139, 10.7522], 7);
                    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                    }).addTo(map);
                    </text>
            }
        });
    </script>
}